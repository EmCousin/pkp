<div class="relative bg-white border border-gray-200 rounded-xl shadow-sm p-5 hover:shadow-md transition overflow-visible">
  <div class="flex items-start justify-between gap-3">
    <div>
      <h3 class="text-base md:text-lg font-semibold text-gray-900">
        <%= link_to category.title, [:admin, category], class: 'hover:underline' %>
      </h3>

      <p class="mt-1 text-sm text-gray-600">
        <span class="font-medium"><%= t('.ages') %>:</span>
        <%= category.min_age %> - <%= category.max_age %>
      </p>

      <p class="mt-1 text-sm text-gray-600">
        <span class="font-medium"><%= Course.model_name.human.pluralize %>:</span>
        <%= category.courses.count %>
      </p>

      <p class="mt-1 text-sm text-gray-600">
        <span class="font-medium"><%= Pricing.model_name.human.pluralize %>:</span>
        <%= category.pricings.count %>
      </p>
    </div>
    <div class="relative overflow-visible">
      <details class="group">
        <summary class="inline-flex items-center rounded-md border border-gray-300 px-3 py-2 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50 cursor-pointer shadow-sm">
          <span>Actions</span>
          <svg class="-mr-1 ml-2 h-5 w-5 text-gray-500 transition-transform group-open:rotate-180" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 10.939l3.71-3.71a.75.75 0 111.06 1.061l-4.24 4.24a.75.75 0 01-1.06 0l-4.24-4.24a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
          </svg>
        </summary>
        <div class="absolute right-0 mt-2 w-44 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 z-[100]">
          <div class="py-1" role="menu" aria-orientation="vertical" aria-labelledby="options-menu">
            <%= link_to t('defaults.show'), [:admin, category], class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100", role: "menuitem" %>
            <%= link_to t('defaults.edit'), [:edit, :admin, category], class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100", role: "menuitem" %>
            <%= button_to t('defaults.destroy'), [:admin, category], method: :delete, data: { turbo_confirm: t('defaults.are_you_sure') }, class: "block w-full text-left px-4 py-2 text-sm text-red-600 hover:bg-red-50", role: "menuitem" %>
          </div>
        </div>
      </details>
    </div>
  </div>
</div>
