<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between mb-6">
      <div>
        <h1 class="text-2xl font-bold text-gray-900"><%= t('.title', default: 'Catégories') %></h1>
        <p class="text-gray-600 mt-1"><%= t('.description', default: 'Gérez les catégories et leurs grilles tarifaires.') %></p>
      </div>
      <%= link_to t('.new_category', default: 'Nouvelle catégorie'), new_admin_category_path,
                  class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-slate-800 hover:bg-slate-900 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-slate-800" %>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <%= render partial: 'admin/categories/category', collection: @categories %>
    </div>
  </div>
</div>


