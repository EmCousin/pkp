<div class="container">
  <%= link_to t('defaults.new', resource: User.model_name.human.downcase
), new_admin_user_path %>
  <hr />

  <table class="table">
    <thead>
      <tr>Liste des membres de Parkour</tr>
    </thead>

    <tbody>
      <% if @users.empty? %>
        <tr>
          <td colspan="9" class="text-center">
            <%= link_to t('.add_user'), new_admin_user_path %>
          </td>
        </tr>
      <% else %>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.phone_number %></td>
            <td><%= user.avatar %></td>
            <td><%= link_to t('defaults.show'), admin_user_path(user.id) %></td>
            <td><%= link_to t('defaults.edit'), edit_admin_user_path(user.id) %></td>
            <td><%= link_to t('defaults.destroy'), admin_user_path(user.id), method: :delete, data: { confirm: t('defaults.are_you_sure') } %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
