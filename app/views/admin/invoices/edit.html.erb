<div class="container">
  <%= form_for [:admin, @subscription, :invoice],
               data: { controller: :form } do |form| %>
    <% if @subscription.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@subscription.errors.count, "error") %> prohibited this invoice from being generated:</h2>
        <ul>
        <% @subscription.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div>
      <p>Parkour Paris</p>
      <p>ID société : 750 838 609 00014</p>
      <p>parkour.paris@gmail.com</p>
      <p>International School of Paris</p>
      <p>E-mail: lhudson@isparis.edu</p>
      <p>Adresse: Rue Beethoven, Paris</p>
    </div>
    <div class="form-group">
      <%= form.label :invoice %>
      <%= form.file_field :invoice, required: true %>
    </div>

    <div class="actions">
      <%= form.submit t('defaults.save'),
                      class: "btn btn-dark float-lg-right",
                      data: { form_target: :submit } %>
      <%= link_to t('defaults.back'), [:admin, @subscription], class: "btn btn-link float-left" %>
    </div>
  <% end %>
</div>
