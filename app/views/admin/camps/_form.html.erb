<%= form_with model: [:admin, @camp], class: "space-y-8" do |form| %>
  <% if @camp.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-400 p-4 rounded-r-lg">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-semibold text-red-800">
            <%= t('errors.template.header', count: @camp.errors.count) %>
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% @camp.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Basic Information Section -->
  <div class="bg-white border border-gray-200 rounded-lg p-6">
    <div class="mb-6">
      <h3 class="text-lg font-semibold text-gray-900">Informations de base</h3>
      <p class="text-sm text-gray-600">Détails principaux du stage</p>
    </div>

    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
      <div>
        <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :title, class: "mt-1 appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-slate-800 focus:border-slate-800 sm:text-sm", placeholder: "Nom du stage" %>
      </div>

      <div>
        <%= form.label :price, class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-1 relative rounded-md shadow-sm">
          <%= form.number_field :price, step: 0.01, min: 0, class: "appearance-none block w-full pr-12 px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-slate-800 focus:border-slate-800 sm:text-sm", placeholder: "0.00" %>
          <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
            <span class="text-gray-500 sm:text-sm">€</span>
          </div>
        </div>
      </div>

      <div>
        <%= form.label :capacity, class: "block text-sm font-medium text-gray-700" %>
        <%= form.number_field :capacity, min: 1, class: "mt-1 appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-slate-800 focus:border-slate-800 sm:text-sm", placeholder: "Nombre de places" %>
      </div>

      <div>
        <%= form.label :starts_at, class: "block text-sm font-medium text-gray-700" %>
        <%= form.date_field :starts_at, class: "mt-1 appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-slate-800 focus:border-slate-800 sm:text-sm" %>
      </div>

      <div>
        <%= form.label :ends_at, class: "block text-sm font-medium text-gray-700" %>
        <%= form.date_field :ends_at, class: "mt-1 appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-slate-800 focus:border-slate-800 sm:text-sm" %>
      </div>
    </div>
  </div>

  <!-- Cover Picture Section -->
  <div class="bg-white border border-gray-200 rounded-lg p-6">
    <div class="mb-6">
      <%= form.label :cover_picture, class: "text-lg font-semibold text-gray-900" %>
      <p class="text-sm text-gray-600"><%= t('.cover_picture_headline') %></p>
    </div>

    <div data-controller="image-upload" data-image-upload-output-class="mx-auto h-64 w-full object-cover rounded-lg shadow-lg">
      <div class="mt-1 flex justify-center px-6 pt-8 pb-10 border-2 border-gray-300 border-dashed rounded-md relative group">
        <div class="space-y-3 text-center pointer-events-none">
          <% if @camp.cover_picture.attached? %>
            <%= image_tag @camp.cover_picture, class: "mx-auto w-full object-cover rounded-lg shadow-lg", data: { image_upload_target: 'output' } %>
          <% else %>
            <div data-image-upload-target="output" class="space-y-3 text-center pointer-events-none">
              <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48">
                <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
              </svg>
              <div class="flex text-sm text-gray-600 justify-center">
                <span class="font-medium text-slate-800"><%= t('.upload_file') %></span>
                <p class="pl-1"><%= t('.or_drag_drop') %></p>
              </div>
            </div>
          <% end %>
        </div>
        <%= form.file_field :cover_picture,
                            class: "absolute inset-0 w-full h-full opacity-0 cursor-pointer z-10",
                            accept: "image/*",
                            data: { image_upload_target: "input", action: "image-upload#preview" } %>
      </div>
    </div>
  </div>

  <!-- Description Section -->
  <div class="bg-white border border-gray-200 rounded-lg p-6">
    <div class="mb-6">
      <%= form.label :description, class: "text-lg font-semibold text-gray-900" %>
      <p class="text-sm text-gray-600"><%= t('.description_headline') %></p>
    </div>

    <div class="mt-1" data-turbo-permanent>
      <%= form.rich_text_area :description, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-slate-800 focus:border-slate-800 sm:text-sm min-h-[200px]" %>
    </div>
  </div>

  <!-- Status Section -->
  <div class="bg-white border border-gray-200 rounded-lg p-6">
    <div class="mb-6">
      <h3 class="text-lg font-semibold text-gray-900">Statut</h3>
      <p class="text-sm text-gray-600">Activez ou désactivez le stage</p>
    </div>

    <div class="flex items-center">
      <%= form.switch :active %>
      <%= form.label :active, class: "ml-2 block text-sm text-gray-900" %>
    </div>
  </div>

  <!-- Action Buttons -->
  <div class="flex justify-end space-x-4 pt-6 border-t border-gray-200">
    <%= link_to t('.cancel'), admin_camps_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-slate-800" %>
    <%= form.submit class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-slate-800 hover:bg-slate-900 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-slate-800" %>
  </div>
<% end %>
