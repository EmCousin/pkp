<div class="px-4 py-4 sm:px-6 relative">
  <!-- Context Menu - Absolutely positioned in top right -->
  <div class="absolute top-4 right-4 z-10">
    <details class="group">
      <%= tag.summary class: "flex cursor-pointer items-center justify-center w-8 h-8 rounded-full text-gray-400 hover:text-gray-600 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2",
                      aria: { label: t('defaults.open_menu') } do %>
        <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
          <path d="M6 10a2 2 0 11-4 0 2 2 0 014 0zM12 10a2 2 0 11-4 0 2 2 0 014 0zM16 12a2 2 0 100-4 2 2 0 000 4z" />
        </svg>
      <% end %>
      <div class="absolute right-0 top-full z-50 mt-1 w-48 rounded-md bg-white shadow-lg ring-1 ring-black ring-opacity-5 divide-y divide-gray-100">
        <%= link_to t('.view'),
            [:admin, camp],
            class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50",
            aria: { label: t('.view') } %>

        <%= link_to t('.edit'),
            [:edit, :admin, camp],
            class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50",
            aria: { label: t('.edit') } %>

        <%= button_to t('.delete'),
            [:admin, camp],
            method: :delete,
            data: { turbo_confirm: t('.confirm_delete') },
            class: "w-full text-left px-4 py-2 text-sm text-red-600 hover:bg-gray-50",
            aria: { label: t('.delete') } %>
      </div>
    </details>
  </div>

  <!-- Camp Content -->
  <div class="flex flex-col sm:flex-row sm:items-center gap-4 pr-12">
    <div class="flex items-start sm:items-center min-w-0 flex-1">
      <div class="flex-shrink-0">
        <% if camp.cover_picture.attached? %>
          <%= image_tag camp.cover_picture, class: "h-12 w-12 rounded-lg object-cover" %>
        <% else %>
          <div class="h-12 w-12 bg-gray-200 rounded-lg flex items-center justify-center">
            <svg class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </div>
        <% end %>
      </div>
      <div class="ml-4 min-w-0 flex-1">
        <div class="flex flex-col sm:flex-row sm:items-center gap-2">
          <p class="text-sm font-medium text-gray-900 truncate"><%= link_to camp.title, [:admin, camp] %></p>
          <%= render 'admin/camps/active_status', camp: %>
          <%= render 'admin/camps/open_status', camp: %>
        </div>
        <div class="flex flex-col sm:flex-row sm:items-center text-sm text-gray-500 gap-1 sm:gap-2 mt-1">
          <span class="whitespace-nowrap"><%= l(camp.starts_at, format: :short) %> - <%= l(camp.ends_at, format: :short) %></span>
          <span class="hidden sm:inline">•</span>
          <span class="whitespace-nowrap"><%= t('.duration_days', count: camp.duration_days) %></span>
          <span class="hidden sm:inline">•</span>
          <span class="whitespace-nowrap"><%= t('.price', price: number_to_currency(camp.price, unit: "€")) %></span>
          <span class="hidden sm:inline">•</span>
          <span class="whitespace-nowrap"><%= t('.capacity', current: camp.subscriptions.confirmed.count, count: camp.capacity) %></span>
        </div>
      </div>
    </div>
  </div>
</div>
