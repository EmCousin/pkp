<div class="px-4 py-4 sm:px-6">
  <div class="flex items-center justify-between">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <% if camp.cover_picture.attached? %>
          <%= image_tag camp.cover_picture, class: "h-12 w-12 rounded-lg object-cover" %>
        <% else %>
          <div class="h-12 w-12 bg-gray-200 rounded-lg flex items-center justify-center">
            <svg class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </div>
        <% end %>
      </div>
      <div class="ml-4">
        <div class="flex items-center">
          <p class="text-sm font-medium text-gray-900"><%= camp.title %></p>
          <% unless camp.active? %>
            <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
              <%= t('.inactive') %>
            </span>
          <% end %>
        </div>
        <div class="flex items-center text-sm text-gray-500">
          <span><%= l(camp.starts_at, format: :short) %> - <%= l(camp.ends_at, format: :short) %></span>
          <span class="mx-2">•</span>
          <span><%= t('.duration_days', count: camp.duration_days) %></span>
          <span class="mx-2">•</span>
          <span><%= t('.price', price: number_to_currency(camp.price, unit: "€")) %></span>
          <span class="mx-2">•</span>
          <span><%= t('.capacity', current: camp.subscriptions.confirmed.count, count: camp.capacity) %></span>
        </div>
      </div>
    </div>
    <div class="flex items-center space-x-2">
      <%= link_to t('.view'), [:admin, camp], class: "text-blue-600 hover:text-blue-900" %>
      <%= link_to t('.edit'), [:edit, :admin, camp], class: "text-gray-600 hover:text-gray-900" %>
      <%= button_to t('.delete'), [:admin, camp], method: :delete, data: { turbo_confirm: t('.confirm_delete') }, class: "text-red-600 hover:text-red-900" %>
    </div>
  </div>
</div>
