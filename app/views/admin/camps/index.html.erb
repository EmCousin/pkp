<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-900"><%= t('.title') %></h1>
    <%= link_to t('.new_camp'), new_admin_camp_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
  </div>

  <div class="bg-white shadow overflow-hidden sm:rounded-md">
    <ul class="divide-y divide-gray-200">
      <% @camps.each do |camp| %>
        <li>
          <%= render 'camp', camp: %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
