<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-6">
    <div class="flex justify-between items-center">
      <h1 class="text-2xl font-bold text-gray-900"><%= @camp.title %></h1>
      <div class="flex space-x-3">
        <%= link_to t('.edit'), edit_admin_camp_path(@camp), class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
        <%= link_to t('.back'), admin_camps_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Camp Details -->
    <div class="lg:col-span-2">
      <div class="bg-white shadow sm:rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <div class="mb-6">
            <% if @camp.cover_picture.attached? %>
              <%= image_tag @camp.cover_picture, class: "w-full h-64 object-cover rounded-lg" %>
            <% end %>
          </div>

          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-6">
            <div>
              <dt class="text-sm font-medium text-gray-500"><%= t('.starts_at') %></dt>
              <dd class="mt-1 text-sm text-gray-900"><%= l(@camp.starts_at, format: :long) %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500"><%= t('.ends_at') %></dt>
              <dd class="mt-1 text-sm text-gray-900"><%= l(@camp.ends_at, format: :long) %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500"><%= t('.duration') %></dt>
              <dd class="mt-1 text-sm text-gray-900"><%= t('.duration_days', count: @camp.duration_days) %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500"><%= t('.price') %></dt>
              <dd class="mt-1 text-sm text-gray-900"><%= number_to_currency(@camp.price, unit: "â‚¬") %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500"><%= t('.capacity') %></dt>
              <dd class="mt-1 text-sm text-gray-900"><%= t('.capacity', current: @camp.subscriptions.confirmed.count, count: @camp.capacity) %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500"><%= t('.status') %></dt>
              <dd class="mt-1">
                <% if @camp.active? %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    <%= t('.active') %>
                  </span>
                <% else %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                    <%= t('.inactive') %>
                  </span>
                <% end %>
              </dd>
            </div>
          </div>

          <% if @camp.description.present? %>
            <div>
              <dt class="text-sm font-medium text-gray-500 mb-2"><%= t('.description') %></dt>
              <dd class="text-sm text-gray-900 prose prose-sm max-w-none">
                <%= @camp.description %>
              </dd>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Subscriptions -->
    <div class="lg:col-span-1">
      <div class="bg-white shadow sm:rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">
            <%= t('.subscriptions') %>
          </h3>

          <!-- Filter Form -->
          <%= form_with url: admin_camp_path(@camp), method: :get, class: "mb-4" do |f| %>
            <div class="grid grid-cols-1 gap-4">
              <div>
                <%= f.label :status, t('.filter_by_status'), class: "block text-sm font-medium text-gray-700" %>
                <%= f.collection_select :status,
                                        Subscription.statuses.keys,
                                        :to_s,
                                        ->(status) { Subscription.human_attribute_name(status) },
                                        { include_blank: t('.all_statuses') },
                                        class: "mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm rounded-md" %>
              </div>
            </div>
            <div class="mt-4">
              <%= f.submit t('.filter'), class: "w-full inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
            </div>
          <% end %>

          <% if @subscriptions.any? %>
            <div class="space-y-3">
              <%= render partial: 'admin/camps/subscription', collection: @subscriptions %>
            </div>
          <% else %>
            <div class="text-center py-4">
              <p class="text-sm text-gray-500"><%= t('.no_subscriptions') %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
