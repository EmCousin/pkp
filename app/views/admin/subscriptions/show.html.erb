<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="mb-8">
    <h1 class="text-2xl text-center font-bold mb-4 text-amber-500">
      <%= @subscription.id %> - <%= Subscription.model_name.human %> <%= @subscription.year %> - <%= @subscription.member.full_name %>
    </h1>
    <!-- Completion Status Badge -->
    <div class="flex justify-center mb-4">
      <% if @subscription.confirmed? %>
        <span class="inline-flex items-center px-4 py-2 rounded-full bg-green-100 text-green-800 text-lg font-semibold shadow">
          <svg class="w-6 h-6 mr-2 text-green-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
          </svg>
          <%= t('.confirmed_status') %>
        </span>
      <% elsif @subscription.pending_confirmation? %>
        <span class="inline-flex items-center px-4 py-2 rounded-full bg-yellow-100 text-yellow-800 text-lg font-semibold shadow">
          <svg class="w-6 h-6 mr-2 text-yellow-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L10 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          <%= t('.pending_confirmation_status') %>
        </span>
      <% elsif @subscription.archived? %>
        <span class="inline-flex items-center px-4 py-2 rounded-full bg-red-100 text-red-800 text-lg font-semibold shadow">
          <svg class="w-6 h-6 mr-2 text-red-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3-9a1 1 0 00-1.414-1.414L10 8.586 8.414 7.586A1 1 0 007 9l1.586 1.586L7 12.172A1 1 0 108.414 13.586L10 12l1.586 1.586A1 1 0 1013 12.172l-1.586-1.586L13 9a1 1 0 000-1.414z" clip-rule="evenodd"/>
          </svg>
          <%= t('.archived_status') %>
        </span>
      <% else %>
        <span class="inline-flex items-center px-4 py-2 rounded-full bg-red-100 text-red-800 text-lg font-semibold shadow">
          <svg class="w-6 h-6 mr-2 text-red-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3-9a1 1 0 00-1.414-1.414L10 8.586 8.414 7.586A1 1 0 007 9l1.586 1.586L7 12.172A1 1 0 108.414 13.586L10 12l1.586 1.586A1 1 0 1013 12.172l-1.586-1.586L13 9a1 1 0 000-1.414z" clip-rule="evenodd"/>
          </svg>
          <%= t('.incomplete_status') %>
        </span>
      <% end %>
    </div>
    <div class="border-b border-gray-200"></div>
    <div class="flex flex-col sm:flex-row sm:justify-end mt-4">
      <%= render 'actions', subscription: @subscription %>
    </div>
  </div>

  <!-- Member & Subscription Card -->
  <div class="bg-white rounded-xl shadow-lg p-6 mb-8">
    <div class="flex flex-col sm:flex-row sm:items-center gap-6 mb-4">
      <div class="relative flex-shrink-0">
        <% if @subscription.member.avatar.variable? %>
          <%= image_tag @subscription.member.avatar.variant(:mini), class: "w-20 h-20 rounded-full object-cover ring-2 ring-indigo-400 shadow" %>
        <% else %>
          <%= image_tag @subscription.member.avatar, class: "w-20 h-20 rounded-full object-cover ring-2 ring-indigo-400 shadow" %>
        <% end %>
        <% if @subscription.completed? %>
          <div class="absolute -bottom-1 -right-1 h-7 w-7 bg-green-500 rounded-full ring-2 ring-white flex items-center justify-center">
            <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
          </div>
        <% end %>
      </div>
      <div class="flex-1">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2">
          <div>
            <div class="text-2xl font-bold text-gray-900"><%= @subscription.member.full_name %></div>
            <div class="text-sm text-gray-500 mt-1"><%= t('dashboard.terms.edit.year', year: @subscription.year, next_year: @subscription.year + 1) %></div>
          </div>
          <div class="text-xl font-semibold text-indigo-600">
            <%= number_to_currency(@subscription.fee, unit: "€", separator: ",", format: "%n %u") %>
          </div>
        </div>
        <div class="mt-2 text-sm text-gray-500">
          <%= mail_to @subscription.member.email, class: "hover:text-blue-800" %>
        </div>
      </div>
    </div>

    <% if (camp = @subscription.camp).present? %>
      <div class="mt-6">
        <div class="bg-white border border-gray-200 rounded-xl shadow-lg overflow-hidden">
          <% if camp.cover_picture.attached? %>
            <div class="relative h-48 sm:h-56 md:h-64 bg-gradient-to-br from-indigo-500 to-purple-600">
              <%= image_tag camp.cover_picture, class: "w-full h-full object-cover" %>
              <div class="absolute inset-0 bg-black bg-opacity-30"></div>
              <div class="absolute bottom-0 left-0 right-0 p-6 text-white">
                <div class="flex items-center gap-3 mb-2">
                  <h3 class="text-xl sm:text-2xl font-bold"><%= camp.title %></h3>
                  <% unless camp.active? %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                      <%= t('admin.camps.camp.inactive') %>
                    </span>
                  <% end %>
                </div>
                <div class="flex flex-wrap items-center gap-4 text-sm text-gray-100">
                  <span class="flex items-center gap-1">
                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                    <%= l(camp.starts_at, format: :short) %> - <%= l(camp.ends_at, format: :short) %>
                  </span>
                  <span class="flex items-center gap-1">
                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3"/>
                      <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2" fill="none"/>
                    </svg>
                    <%= t('admin.camps.camp.duration_days', count: camp.duration_days) %>
                  </span>
                  <span class="flex items-center gap-1">
                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 1.343-3 3s1.343 3 3 3 3-1.343 3-3-1.343-3-3-3zm0 0V4m0 8v8"/>
                    </svg>
                    <%= number_to_currency(camp.price, unit: "€") %>
                  </span>
                  <span class="flex items-center gap-1">
                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a4 4 0 00-3-3.87M9 20H4v-2a4 4 0 013-3.87m9-4.13a4 4 0 10-8 0 4 4 0 008 0z"/>
                    </svg>
                    <%= t('admin.camps.camp.capacity', current: camp.subscriptions.confirmed.count, count: camp.capacity) %>
                  </span>
                </div>
              </div>
            </div>
          <% else %>
            <div class="bg-gradient-to-br from-indigo-500 to-purple-600 p-6">
              <div class="flex items-center gap-3 mb-2">
                <h3 class="text-xl sm:text-2xl font-bold text-white"><%= camp.title %></h3>
                <% unless camp.active? %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                    <%= t('admin.camps.camp.inactive') %>
                  </span>
                <% end %>
              </div>
              <div class="flex flex-wrap items-center gap-4 text-sm text-gray-100">
                <span class="flex items-center gap-1">
                  <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                  </svg>
                  <%= l(camp.starts_at, format: :short) %> - <%= l(camp.ends_at, format: :short) %>
                </span>
                <span class="flex items-center gap-1">
                  <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3"/>
                    <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2" fill="none"/>
                  </svg>
                  <%= t('admin.camps.camp.duration_days', count: camp.duration_days) %>
                </span>
                <span class="flex items-center gap-1">
                  <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 1.343-3 3s1.343 3 3 3 3-1.343 3-3-1.343-3-3-3zm0 0V4m0 8v8"/>
                  </svg>
                  <%= number_to_currency(camp.price, unit: "€") %>
                </span>
                <span class="flex items-center gap-1">
                  <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a4 4 0 00-3-3.87M9 20H4v-2a4 4 0 013-3.87m9-4.13a4 4 0 10-8 0 4 4 0 008 0z"/>
                  </svg>
                  <%= t('admin.camps.camp.capacity', current: camp.subscriptions.confirmed.count, count: camp.capacity) %>
                </span>
              </div>
            </div>
          <% end %>

          <div class="p-6">
            <% if camp.description.present? %>
              <div class="mb-4 text-gray-700 text-sm leading-relaxed">
                <%= truncate(strip_tags(camp.description.to_s), length: 200) %>
              </div>
            <% end %>
            <div class="flex justify-end">
              <%= link_to t('admin.camps.camp.view'), [:admin, camp], class: "inline-flex items-center px-4 py-2 rounded-md bg-indigo-600 text-white text-sm font-medium hover:bg-indigo-700 transition-colors duration-200" %>
            </div>
          </div>
        </div>
      </div>
    <% elsif @subscription.courses.any? %>
      <!-- Courses Table -->
      <div class="overflow-x-auto mt-4">
        <table class="min-w-full divide-y divide-gray-200 rounded-lg overflow-hidden shadow-sm">
          <thead class="bg-indigo-50">
            <tr>
              <th class="px-4 py-3 text-left text-xs font-semibold text-indigo-700 uppercase tracking-wider"><%= Course.human_attribute_name(:title) %></th>
              <th class="px-4 py-3 text-left text-xs font-semibold text-indigo-700 uppercase tracking-wider"><%= Course.human_attribute_name(:weekday) %></th>
              <th class="px-4 py-3 text-left text-xs font-semibold text-indigo-700 uppercase tracking-wider"><%= Course.human_attribute_name(:category) %></th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-100">
            <% @subscription.courses.each do |course| %>
              <tr class="hover:bg-indigo-50 transition">
                <td class="px-4 py-3 text-sm text-gray-900 font-medium"><%= course.title %></td>
                <td class="px-4 py-3 text-sm text-gray-700"><%= course.weekday %></td>
                <td class="px-4 py-3 text-sm">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
                    <%= course.category.title %>
                  </span>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <!-- End Courses Table -->
    <% else %>
      <div class="mt-4 text-sm text-gray-500">
        <%= t('.invalid_subscription') %>
      </div>
    <% end %>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 text-sm text-gray-700 mt-6">
      <div>
        <span class="font-medium text-gray-500"><%= Member.human_attribute_name(:birthdate) %> :</span>
        <span><%= l(@subscription.member.birthdate, format: :long) if @subscription.member.birthdate %></span>
      </div>
      <div>
        <span class="font-medium text-gray-500"><%= User.human_attribute_name(:address) %> :</span>
        <span><%= @subscription.member.address %></span>
      </div>
      <div>
        <span class="font-medium text-gray-500"><%= User.human_attribute_name(:zip_code) %> :</span>
        <span><%= @subscription.member.zip_code %></span>
      </div>
      <div>
        <span class="font-medium text-gray-500"><%= User.human_attribute_name(:city) %> :</span>
        <span><%= @subscription.member.city %></span>
      </div>
      <div>
        <span class="font-medium text-gray-500"><%= User.human_attribute_name(:country) %> :</span>
        <span><%= @subscription.member.country %></span>
      </div>
      <div>
        <span class="font-medium text-gray-500"><%= User.human_attribute_name(:phone_number) %> :</span>
        <span><%= @subscription.member.phone_number %></span>
      </div>
      <div>
        <span class="font-medium text-gray-500"><%= User.human_attribute_name(:email) %> :</span>
        <span><%= @subscription.member.email %></span>
      </div>
      <div>
        <span class="font-medium text-gray-500"><%= Member.human_attribute_name(:contact_name) %> :</span>
        <span><%= @subscription.member.contact_name %></span>
      </div>
      <div>
        <span class="font-medium text-gray-500"><%= Member.human_attribute_name(:contact_relationship) %> :</span>
        <span><%= @subscription.member.contact_relationship %></span>
      </div>
      <div>
        <span class="font-medium text-gray-500"><%= Member.human_attribute_name(:contact_phone_number) %> :</span>
        <span><%= @subscription.member.contact_phone_number %></span>
      </div>
      <% if @subscription.payment_method.present? %>
        <div>
          <span class="font-medium text-gray-500"><%= Subscription.human_attribute_name(:payment_method) %> :</span>
          <span><%= Subscription.human_attribute_name(@subscription.payment_method) %></span>
        </div>
      <% end %>
      <div>
        <span class="font-medium text-gray-500"><%= Member.human_attribute_name(:agreed_to_advertising_right) %> :</span>
        <span><%= @subscription.member.agreed_to_advertising_right ? t('dashboard.terms.edit.yes') : t('dashboard.terms.edit.no') %></span>
      </div>
    </div>
  </div>

  <!-- Payment Documents Section -->
  <% if @subscription.paid? %>
    <div class="bg-white shadow-sm rounded-lg p-6 mt-8">
      <h3 class="text-lg font-medium text-gray-900 mb-4">
        <%= t('.invoicing') %>
      </h3>
      <div class="space-y-4">
        <div>
          <span class="text-sm font-medium text-gray-700">
            <%= Subscription.human_attribute_name(:invoice) %>:
          </span>
          <div class="mt-2">
            <% if @subscription.invoice.attached? %>
              <div class="flex flex-col sm:flex-row gap-3">
                <%= link_to t('defaults.download'),
                    rails_blob_path(@subscription.invoice, disposition: "attachment"),
                    class: "inline-flex justify-center items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-slate-800" %>
                <%= link_to t('.generate_credit_note'),
                    new_admin_subscription_credit_note_path(@subscription.id),
                    class: "inline-flex justify-center items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
              </div>
            <% else %>
              <%= link_to t('.preview_invoice'),
                  admin_subscription_invoice_path(@subscription.id),
                  method: :get,
                  class: "inline-flex justify-center items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
            <% end %>
          </div>
        </div>
        <% if @subscription.credit_notes.any? %>
          <div class="mt-6">
            <h4 class="text-base font-medium text-gray-900 mb-3">
              <%= Subscription.human_attribute_name(:credit_notes) %>
            </h4>
            <div class="bg-white shadow overflow-hidden rounded-md">
              <ul class="divide-y divide-gray-200">
                <% @subscription.credit_notes.each do |credit_note| %>
                  <li class="px-4 py-3">
                    <div class="flex items-center justify-between">
                      <div class="flex items-center space-x-4">
                        <span class="text-sm text-gray-500">#<%= credit_note.id %></span>
                        <span class="text-sm text-gray-500">
                          <%= l(credit_note.created_at, format: :short) %>
                        </span>
                      </div>
                      <%= link_to t('defaults.download'),
                          rails_blob_path(credit_note, disposition: "attachment"),
                          class: "text-sm text-blue-600 hover:text-blue-800" %>
                    </div>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Completion Status Cards -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-8">
    <!-- Terms Accepted Card -->
    <div class="relative group">
      <div class="absolute -inset-0.5 bg-gradient-to-r from-indigo-600 to-blue-600 rounded-lg blur opacity-25 group-hover:opacity-50 transition duration-1000"></div>
      <div class="relative p-6 bg-white ring-1 ring-gray-200 rounded-lg flex flex-col items-start">
        <span class="block text-xs font-medium text-gray-500 uppercase mb-3">
          <%= Subscription.human_attribute_name(:terms_accepted_at) %>
        </span>
        <% if @subscription.terms_accepted_at? %>
          <span class="text-gray-700 font-semibold">✅ <%= t('.terms_accepted') %></span>
        <% else %>
          <span class="text-red-600 font-semibold"><%= t('.terms_not_accepted') %></span>
        <% end %>
      </div>
    </div>
    <!-- Doctor Certification Card -->
    <div class="relative group">
      <div class="absolute -inset-0.5 bg-gradient-to-r from-green-400 to-blue-500 rounded-lg blur opacity-25 group-hover:opacity-50 transition duration-1000"></div>
      <div class="relative p-6 bg-white ring-1 ring-gray-200 rounded-lg flex flex-col items-start">
        <span class="block text-xs font-medium text-gray-500 uppercase mb-3">
          <%= Subscription.human_attribute_name(:doctor_certified_at) %>
        </span>
        <% if @subscription.doctor_certified_at? && @subscription.medical_certificate.attached? %>
          <span class="text-gray-700 font-semibold">✅ <%= t('.doctor_certified') %></span>
        <% elsif @subscription.doctor_certified_at? %>
          <span class="text-yellow-600 font-semibold" title="<%= t('.medical_certificate_missing_explanation') %>">⚠️ <%= t('.medical_certificate_missing') %></span>
        <% else %>
          <span class="text-red-600 font-semibold"><%= t('.doctor_not_certified') %></span>
        <% end %>
      </div>
    </div>
    <!-- Payment Card -->
    <div class="relative group">
      <div class="absolute -inset-0.5 bg-gradient-to-r from-pink-400 to-pink-600 rounded-lg blur opacity-25 group-hover:opacity-50 transition duration-1000"></div>
      <div class="relative p-6 bg-white ring-1 ring-gray-200 rounded-lg flex flex-col items-start">
        <span class="block text-xs font-medium text-gray-500 uppercase mb-3">
          <%= t('.payment') %>
        </span>
        <% if @subscription.paid? %>
          <span class="text-gray-700 font-semibold">✅ <%= t('.paid') %></span>
        <% elsif @subscription.payment_proof.attached? %>
          <span class="text-yellow-700 font-semibold">⚠️ <%= t('.payment_proof_awaiting_review') %></span>
          <%= link_to t('defaults.download'),
                          rails_blob_path(@subscription.payment_proof, disposition: "attachment"),
                          class: "text-yellow-700 text-sm font-medium hover:underline mt-2" %>
        <% else %>
          <span class="text-red-600 font-semibold"><%= t('.not_paid') %></span>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Admin Actions -->
  <div class="flex flex-col sm:flex-row gap-3 pt-8 justify-end">
    <%= link_to t('defaults.back'),
        %i[admin subscriptions],
        class: "inline-flex justify-center items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-slate-800" %>
    <%= link_to t('defaults.edit'),
        [:edit, :admin, @subscription],
        class: "inline-flex justify-center items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-slate-800 hover:bg-slate-900 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-slate-800" %>
    <%= button_to t('defaults.destroy'),
        [:admin, @subscription],
        method: :delete,
        data: {
          controller: :confirm,
          confirm_message_value: t('defaults.are_you_sure')
        },
        class: "inline-flex justify-center items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
  </div>
</div>
