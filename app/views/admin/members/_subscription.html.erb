<div class="border border-gray-300 rounded-lg shadow-md p-4 transition-transform transform hover:scale-105">
  <div class="flex flex-col sm:flex-row justify-between mb-4">
    <div class="flex items-center gap-2">
      <span class="font-semibold <%= subscription.status_color.gsub('table-', 'text-') %>">
        <%= Subscription.human_attribute_name(subscription.status) %>
      </span>
      <span class="text-lg text-gray-700">
        <%= number_to_currency(subscription.fee, unit: "â‚¬", separator: ",", format: "%n %u") %>
      </span>
    </div>
    <div class="flex gap-1">
      <%= link_to t('defaults.view'),
          [:admin, subscription],
          class: "text-sm text-blue-600 hover:text-blue-800 font-medium" %>

      <%= link_to t('defaults.edit'),
          [:edit, :admin, subscription],
          class: "text-sm text-blue-600 hover:text-blue-800 font-medium",
          target: '_blank' %>

      <% if subscription.form.attached? %>
        <%= link_to t('admin.subscriptions.show.download_subscription_form'),
            rails_blob_path(subscription.form),
            class: "text-sm text-blue-600 hover:text-blue-800 font-medium" %>
      <% end %>
    </div>
  </div>

  <div class="space-y-2">
    <% if subscription.courses.any? %>
      <% subscription.courses.includes(:category, attendance_sheets: :attendance_records).each do |course| %>
        <%= link_to admin_course_path(course), class: "block p-3 border border-gray-200 rounded-lg bg-gray-50 hover:bg-gray-100 transition", data: { turbo_frame: '_top' } do %>
          <div class="flex items-center justify-between">
            <div class="flex items-center gap-3">
              <div>
                <div class="font-medium text-gray-900">
                  <%= course.title %>
                </div>
                <div class="text-sm text-gray-600">
                  <%= course.category.title %>
                </div>
              </div>
            </div>
            <div class="flex items-center gap-1">
              <% subscription.member.attendance_records_for(course).recent.each do |record| %>
                <% if record.absent? %>
                  <div class="w-2 h-2 bg-red-500 rounded-full" title="Absent"></div>
                <% elsif record.excused? %>
                  <div class="w-2 h-2 bg-yellow-500 rounded-full" title="Excused"></div>
                <% else %>
                  <div class="w-2 h-2 bg-green-500 rounded-full" title="Present"></div>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    <% elsif subscription.camp.present? %>
      <%= link_to [:admin, subscription.camp], class: "flex items-center justify-between p-3 border border-gray-200 rounded-lg bg-gray-50" do %>
        <div class="flex items-center gap-3">
          <% if subscription.camp.cover_picture.attached? %>
            <%= image_tag subscription.camp.cover_picture, class: "w-8 h-8 rounded object-cover" %>
          <% else %>
            <div class="w-8 h-8 bg-gray-200 rounded flex items-center justify-center">
              <svg class="w-4 h-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd" />
              </svg>
            </div>
          <% end %>
          <div>
            <div class="font-medium text-gray-900">
              <%= subscription.camp.title %>
            </div>
            <div class="text-sm text-gray-600">
              <%= l(subscription.camp.starts_at, format: :long) %>
              <% if subscription.camp.ends_at && subscription.camp.ends_at != subscription.camp.starts_at %>
                &ndash; <%= l(subscription.camp.ends_at, format: :long) %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="text-sm text-gray-500">
        <%= t('.invalid_subscription') %>
      </div>
    <% end %>
  </div>
</div>
