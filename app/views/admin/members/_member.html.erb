<%= turbo_frame_tag dom_id(member, :row), class: "block border bg-white rounded-lg shadow-sm p-4" do %>
  <div class="relative">
    <% unless params[:display_actions] == 'no' %>
      <div class="absolute top-0 right-0">
        <div class="relative">
          <details class="group">
            <summary class="flex items-center gap-1 text-gray-700 hover:text-gray-900 cursor-pointer">
              <%= t('defaults.action') %>
              <svg class="w-4 h-4 transition-transform group-open:rotate-180" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </summary>
            <div class="absolute right-0 mt-2 w-48 rounded-md shadow-lg py-1 bg-white ring-1 ring-black ring-opacity-5 z-50">
              <%= link_to t('defaults.edit'),
                  [:edit, :admin, member],
                  class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100",
                  data: { turbo_frame: '_top' } %>

              <% Member.levels.each_key do |level| %>
                <% unless member.level == level %>
                  <%= button_to({
                      controller: 'admin/members',
                      action: 'update',
                      id: member.id,
                      member: { level: level }
                    },
                    method: :put,
                    class: "w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100") do %>
                    <div class="flex items-center">
                      <div class="w-4 h-4 border border-gray-400 rounded"
                           style="background-color: <%= level %>">
                      </div>
                      <span class="ml-2"><%= t("admin.courses.subscription.move_to_#{level}_level") %></span>
                    </div>
                  <% end %>
                <% end %>
              <% end %>

              <%= button_to t('defaults.destroy'),
                  [:admin, member],
                  method: :delete,
                  data: {
                    controller: :confirm,
                    confirm_message_value: t('defaults.are_you_sure'),
                    turbo_frame: '_top'
                  },
                  class: "w-full text-left px-4 py-2 text-sm text-red-600 hover:bg-gray-100" %>
            </div>
          </details>
        </div>
      </div>
    <% end %>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
      <% unless params[:display_level] == 'no' %>
        <div class="flex items-center space-x-2">
          <span class="text-sm text-gray-500">Niveau:</span>
          <div class="w-4 h-4 border border-gray-400 rounded"
               style="background-color: <%= member.level %>"
               title="<%= member.level_text %>">
          </div>
        </div>
      <% end %>

      <% unless params[:display_avatar] == 'no' %>
        <div class="flex items-center space-x-2">
          <%= link_to [:admin, member] do %>
            <% if member.avatar.variable? %>
              <%= image_tag member.avatar.variant(:mini), class: "w-8 h-8 rounded-full" %>
            <% else %>
              <%= image_tag member.avatar, class: "w-8 h-8 rounded-full" %>
            <% end %>
          <% end %>
        </div>
      <% end %>

      <% unless params[:display_name] == 'no' %>
        <div class="flex items-center space-x-2">
          <span class="text-sm text-gray-500">Nom:</span>
          <span><%= member.full_name %></span>
        </div>
      <% end %>

      <% unless params[:display_phone_number] == 'no' %>
        <div class="flex items-center space-x-2">
          <span class="text-sm text-gray-500">TÃ©l:</span>
          <%= link_to member.phone_number, "tel:#{member.phone_number}", class: "text-blue-600 hover:text-blue-800" %>
        </div>
      <% end %>

      <% unless params[:display_email] == 'no' %>
        <div class="flex items-center space-x-2">
          <span class="text-sm text-gray-500">Email:</span>
          <%= mail_to member.user.email, member.user.email, class: "text-blue-600 hover:text-blue-800" %>
        </div>
      <% end %>

      <% unless params[:display_contact_email] == 'no' %>
        <div class="flex items-center space-x-2">
          <span class="text-sm text-gray-500">Contact:</span>
          <span><%= member.contacts.map(&:email).join(', ') %></span>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
