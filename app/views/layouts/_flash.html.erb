<div class="fixed inset-x-0 top-0 z-50 space-y-2 animate-slide-in-down-out-up">
  <% if alert.present? %>
    <div class="relative">
      <%= check_box_tag "alert-dismiss", "1", false, class: "absolute inset-0 opacity-0 w-full h-full cursor-pointer peer" %>
      <div class="bg-yellow-50 rounded-lg shadow-sm peer-checked:hidden" role="alert">
        <div class="flex items-center justify-between px-4 py-3">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-yellow-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm text-yellow-700" id="alert"><%= alert %></p>
            </div>
          </div>
          <div class="ml-4 text-yellow-500 hover:text-yellow-600">
            <span class="text-sm"><%=t('defaults.dismiss') %></span>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <% if notice.present? %>
    <div class="relative">
      <%= check_box_tag "notice-dismiss", "1", false, class: "absolute inset-0 opacity-0 w-full h-full cursor-pointer peer" %>
      <div class="bg-blue-50 rounded-lg shadow-sm peer-checked:hidden" role="alert">
        <div class="flex items-center justify-between px-4 py-3">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-blue-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm text-blue-700" id="notice"><%= notice %></p>
            </div>
          </div>
          <div class="ml-4 text-blue-500 hover:text-blue-600">
            <span class="text-sm"><%=t('defaults.dismiss') %> </span>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <% if current_user&.invalid_email_provider? %>
    <div class="relative">
      <%= check_box_tag "email-warning-dismiss", "1", false, class: "absolute inset-0 opacity-0 w-full h-full cursor-pointer peer" %>
      <div class="bg-red-50 rounded-lg shadow-sm peer-checked:hidden" role="alert">
        <div class="flex items-center justify-between px-4 py-3">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm text-red-700"><%= t('.invalid_email_provider', email: current_user.email) %></p>
            </div>
          </div>
          <div class="ml-4 text-red-500 hover:text-red-600">
            <span class="text-sm"><%=t('defaults.dismiss') %></span>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
