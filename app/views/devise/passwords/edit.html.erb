<div class="row pb-5">
  <div class="col-md-6 offset-md-3">
    <h2><%= t('.title') %></h2>

    <%= form_for resource,
                 as: resource_name,
                 url: password_path(resource_name),
                 html: {
                   method: :put,
                   data: { controller: :form }
                 } do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= t('.minimum_characters', length: @minimum_password_length) %>)</em>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="actions mt-5">
        <div class="float-left">
          <%= render "devise/shared/links" %>
        </div>
        <%= f.submit t('defaults.save'),
                     class: "btn btn-dark btn-lg float-right",
                     data: { form_target: :submit } %>
      </div>
    <% end %>
  </div>
</div>
