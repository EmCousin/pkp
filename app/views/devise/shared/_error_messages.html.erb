<% if resource.errors.any? %>
  <div id="error_explanation" class="text-red-500 bg-red-50 border border-red-400 rounded-md p-4">
    <ul class="list-disc list-inside">
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
