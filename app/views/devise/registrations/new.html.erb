<div class="row pb-5">
  <div class="col-md-6 offset-md-3">
    <h1 class="page-title"><%= t('defaults.signup') %></h1>

    <hr />

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |form| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="row">
        <div class="form-group col">
          <%= form.label :email %><br />
          <%= form.email_field :email, autocomplete: "email", autofocus: true, required: true, class: "form-control" %>
        </div>

        <div class="form-group col mb-2" data-controller="input">
          <%= form.label :email_confirmation %>
          <%= form.email_field :email_confirmation, autocomplete: "email", required: true, class: "form-control", data: { action: "paste->input#prevent" } %>
        </div>
      </div>

      <div class="row">
        <div class="form-group col">
          <%= form.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= t('.minimum_characters', length: @minimum_password_length) %>)</em>
          <% end %><br />
          <%= form.password_field :password, autocomplete: "new-password", required: true, class: "form-control" %>
        </div>

        <div class="form-group col mb-2">
          <%= form.label :password_confirmation %><br />
          <%= form.password_field :password_confirmation, autocomplete: "new-password", required: true, class: "form-control" %>
        </div>
      </div>

      <div class="actions mt-2">
        <%= form.submit t('defaults.signup'), class: "btn btn-dark btn-lg w-100" %>
      </div>

      <div class="mt-2">
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>
