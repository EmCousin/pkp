<div class="row pb-5">
  <div class="col-md-6 offset-md-3">
    <h1 class="page-title"><%= t('defaults.signup') %></h1>

    <hr />

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |form| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="row">
        <div class="form-group col">
          <%= form.label :first_name %><br />
          <%= form.text_field :first_name, autofocus: true, required: true, class: "form-control" %>
        </div>

        <div class="form-group col">
          <%= form.label :last_name %><br />
          <%= form.text_field :last_name, required: true, class: "form-control" %>
        </div>
      </div>

      <div class="row">
        <div class="form-group col">
          <%= form.label :birthdate %>
          <%= form.date_field :birthdate, required: true, class: "form-control" %>
        </div>

        <div class="form-group col">
          <%= form.label :phone_number %>
          <%= form.telephone_field :phone_number, required: true, class: "form-control" %>
        </div>
      </div>

      <div
        data-controller="places"
        data-places-app-id="<%= Rails.application.credentials.algolia(:application_id) %>"
        data-places-api-key="<%= Rails.application.credentials.algolia(:search_key) %>"
      >
        <div class="form-group">
          <%= form.label :address %>
          <%= form.text_field :address, required: true, class: "form-control", data: { target: 'places.address' } %>
        </div>

        <div class="row">
          <div class="form-group col">
            <%= form.label :zip_code %>
            <%= form.text_field :zip_code, required: true, class: "form-control", data: { target: 'places.zipCode' } %>
          </div>

          <div class="form-group col ">
            <%= form.label :city %>
            <%= form.text_field :city, required: true, class: "form-control", data: { target: 'places.city' } %>
          </div>

          <div class="form-group col">
            <%= form.label :country %>
            <%= form.text_field :country, required: true, class: "form-control", data: { target: 'places.country' } %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <%= form.label :contact_name %>
        <%= form.text_field :contact_name, required: true, class: "form-control" %>
      </div>

      <div class="row">
        <div class="form-group col">
          <%= form.label :contact_phone_number %>
          <%= form.telephone_field :contact_phone_number, required: true, class: "form-control" %>
        </div>

        <div class="form-group col">
          <%= form.label :contact_relationship %><br />
          <%= form.select(:contact_relationship, options_for_select(User::CONTACTS), { include_blank: true }, required: true, class: "form-control") %>
        </div>
      </div>

      <div class="form-group">
        <%= form.label :agreed_to_publicity_right %>
        <%= form.check_box :agreed_to_publicity_right, required: true %>
      </div>

      <div class="form-group">
        <%= form.label :avatar %>
        <%= form.file_field :avatar, required: true %>
      </div>

      <hr />

      <div class="row">
        <div class="form-group col">
          <%= form.label :email %><br />
          <%= form.email_field :email, autocomplete: "email", required: true, class: "form-control" %>
        </div>

        <div class="form-group col mb-2">
          <%= form.label :email_confirmation %>
          <%= form.email_field :email_confirmation, autocomplete: "email", required: true, class: "form-control" %>
        </div>
      </div>

      <div class="row">
        <div class="form-group col">
          <%= form.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= t('.minimum_characters', length: @minimum_password_length) %>)</em>
          <% end %><br />
          <%= form.password_field :password, autocomplete: "new-password", required: true, class: "form-control" %>
        </div>

        <div class="form-group col mb-2">
          <%= form.label :password_confirmation %><br />
          <%= form.password_field :password_confirmation, autocomplete: "new-password", required: true, class: "form-control" %>
        </div>
      </div>

      <div class="actions mt-2">
        <%= form.submit t('defaults.signup'), class: "btn btn-dark btn-lg w-100" %>
      </div>

      <div class="mt-2">
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>
