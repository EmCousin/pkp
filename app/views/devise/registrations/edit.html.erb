<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <h1 class="mt-6 text-center text-3xl font-extrabold text-amber-500">
        <%= t('.title') %>
      </h1>
      <div class="mt-2 border-b border-gray-300"></div>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "mt-8 space-y-6" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="space-y-6">
        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "mt-1 appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-slate-800 focus:border-slate-800 sm:text-sm" %>
          <%= f.error_for :email, full_messages: true %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="text-sm text-gray-500">
            <%= t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) %>
          </div>
        <% end %>

        <div>
          <%= f.label :phone_number, class: "block text-sm font-medium text-gray-700" %>
          <%= f.telephone_field :phone_number,
              class: "mt-1 appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-slate-800 focus:border-slate-800 sm:text-sm" %>
          <%= f.error_for :phone_number, full_messages: true %>
        </div>

        <div>
          <%= f.label :address, class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :address,
              class: "mt-1 appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-slate-800 focus:border-slate-800 sm:text-sm" %>
          <%= f.error_for :address, full_messages: true %>
        </div>

        <div>
          <%= f.label :zip_code, class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :zip_code,
              class: "mt-1 appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-slate-800 focus:border-slate-800 sm:text-sm" %>
          <%= f.error_for :zip_code, full_messages: true %>
        </div>

        <div>
          <%= f.label :city, class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :city,
              class: "mt-1 appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-slate-800 focus:border-slate-800 sm:text-sm" %>
          <%= f.error_for :city, full_messages: true %>
        </div>

        <div>
          <%= f.label :country, class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :country,
              class: "mt-1 appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-slate-800 focus:border-slate-800 sm:text-sm" %>
          <%= f.error_for :country, full_messages: true %>
        </div>

        <div>
          <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
          <%= f.password_field :password,
                               autocomplete: "new-password",
                               class: "mt-1 appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-slate-800 focus:border-slate-800 sm:text-sm" %>
          <p class="mt-2 text-sm text-gray-500">
            <%= t('.leave_blank_if_you_don_t_want_to_change_it').capitalize %>
          </p>
          <%= f.error_for :password, full_messages: true %>
        </div>

        <div>
          <%= f.label :current_password, class: "block text-sm font-medium text-gray-700" %>
          <%= f.password_field :current_password,
                               autocomplete: "current-password",
                               class: "mt-1 appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-slate-800 focus:border-slate-800 sm:text-sm" %>
          <p class="mt-2 text-sm text-gray-500">
            <%= t('.we_need_your_current_password_to_confirm_your_changes').capitalize %>
          </p>
          <%= f.error_for :current_password, full_messages: true %>
        </div>

        <%= f.submit t('defaults.save'),
                     class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-slate-800 hover:bg-slate-900 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-slate-800" %>
      </div>
    <% end %>

    <div class="mt-6 space-y-4">
      <%= render "devise/shared/links" %>

      <div class="pt-4 border-t border-gray-200">
        <h3 class="text-lg font-medium text-gray-900"><%= t('.cancel_my_account') %></h3>

        <div class="text-sm mt-2 p-4 mb-4 text-sm text-red-700 bg-red-100 rounded-lg dark:bg-red-200 dark:text-red-800" role="alert">
          <span>
            <%= t('.click_below_to_delete_your_account') %>
            <b><%= t('.warning_cannot_be_undone') %></b>
          </span>

          <div class="mt-2">
            <%= button_to t('.cancel_my_account'), registration_path(resource_name),
                          form: { data: { turbo_confirm: t('.are_you_sure') } },
                          method: :delete,
                          class: "flex items-center w-full px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
