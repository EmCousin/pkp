<div class="w-full max-w-4xl mx-auto px-4 py-8">
  <% if @subscription.paid? %>
    <!-- Payment Success Component -->
    <div class="bg-gradient-to-r from-green-50 to-emerald-50 border border-green-200 rounded-xl shadow-lg p-8 mb-8">
      <div class="text-center">
        <!-- Success Icon -->
        <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-green-100 mb-6">
          <svg class="h-8 w-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
        </div>

        <!-- Success Message -->
        <h1 class="text-3xl font-bold text-green-800 mb-4"><%= t('.title') %></h1>
        <p class="text-lg text-green-700 mb-6">
          <%= t('.success', amount: number_to_currency(@subscription.fee, unit: "€", separator: ",", format: "%n %u")) %>
        </p>

        <!-- Payment Details -->
        <div class="bg-white rounded-lg p-6 mb-6 shadow-sm">
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 text-sm">
            <div>
              <span class="font-medium text-gray-600"><%= t('.payment_date') %> :</span>
              <span class="text-gray-900"><%= l(@subscription.paid_at, format: :long) %></span>
            </div>
            <div>
              <span class="font-medium text-gray-600"><%= t('.payment_method') %> :</span>
              <span class="text-gray-900"><%= t(".payment_methods.#{@subscription.payment_method}") %></span>
            </div>
            <% if @subscription.stripe_charge_id %>
            <div class="sm:col-span-2">
              <span class="font-medium text-gray-600"><%= t('.reference') %> :</span>
              <span class="text-gray-900 font-mono text-xs"><%= @subscription.stripe_charge_id %></span>
            </div>
            <% end %>
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <%= link_to dashboard_subscription_path(@subscription),
                      class: "inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-lg text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-200" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            <%= t('.back_to_subscription') %>
          <% end %>

          <%= link_to dashboard_path,
                      class: "inline-flex items-center justify-center px-6 py-3 border border-gray-300 text-base font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-200" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m0 0V11a1 1 0 011-1h2a1 1 0 011 1v10m3 0a1 1 0 001-1V10M9 21h6"></path>
            </svg>
            <%= t('.back_to_dashboard') %>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Next Steps Information -->
    <div class="bg-blue-50 border border-blue-200 rounded-xl p-6 mb-8">
      <h3 class="text-lg font-semibold text-blue-800 mb-3"><%= t('.next_steps') %></h3>
      <div class="space-y-2 text-blue-700">
        <% if @subscription.confirmed? %>
          <p class="flex items-center">
            <svg class="w-5 h-5 mr-2 text-green-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
            <%= t('.confirmed') %>
          </p>
        <% else %>
          <p class="flex items-center">
            <svg class="w-5 h-5 mr-2 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
            </svg>
            <%= t('.not_confirmed') %>
          </p>
        <% end %>
        <p class="flex items-center">
          <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
          <%= t('.next_steps_description') %>
        </p>
      </div>
    </div>

  <% else %>
    <!-- Payment Error Component -->
    <div class="bg-gradient-to-r from-red-50 to-pink-50 border border-red-200 rounded-xl shadow-lg p-8 mb-8">
      <div class="text-center">
        <!-- Error Icon -->
        <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-red-100 mb-6">
          <svg class="h-8 w-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </div>

        <!-- Error Message -->
        <h1 class="text-3xl font-bold text-red-800 mb-4"><%= t('.error_title') %></h1>
        <p class="text-lg text-red-700 mb-6">
          <%= t('.error_description') %>
        </p>

        <!-- Error Details -->
        <div class="bg-white rounded-lg p-6 mb-6 shadow-sm">
          <h3 class="font-semibold text-gray-900 mb-3"><%= t('.error_details') %></h3>
          <div class="text-left space-y-2 text-gray-700">
            <p>• <%= t('.error_details_description_1') %></p>
            <p>• <%= t('.error_details_description_2') %></p>
            <p>• <%= t('.error_details_description_3') %></p>
            <p>• <%= t('.error_details_description_4') %></p>
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <%= link_to new_dashboard_subscription_payment_path(@subscription),
                      class: "inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-lg text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors duration-200" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
            </svg>
            <%= t('.retry_payment') %>
          <% end %>

          <%= link_to dashboard_subscription_path(@subscription),
                      class: "inline-flex items-center justify-center px-6 py-3 border border-gray-300 text-base font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors duration-200" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            <%= t('.back_to_subscription') %>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Contact Information -->
    <div class="bg-gray-50 border border-gray-200 rounded-xl p-6">
      <h3 class="text-lg font-semibold text-gray-800 mb-3"><%= t('.need_help') %></h3>
      <p class="text-gray-600 mb-4">
        <%= t('.need_help_description') %>
      </p>
      <div class="flex flex-col sm:flex-row gap-4">
        <%= mail_to "contact@parkourparis.fr",
                    class: "inline-flex items-center justify-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 transition-colors duration-200" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
          contact@parkourparis.fr
        <% end %>
      </div>
    </div>
  <% end %>
</div>
