<div class="row">
  <div class="col-md-6 offset-md-3">
    <%= form_tag(new_dashboard_subscription_path, method: :get) do %>
      <div class="form-group">
        <%= label_tag :category %>
        <%= collection_select(nil, :category, Course::CATEGORIES, :to_s, :to_s, { include_blank: true }, required: true, class: "form-control", onchange: "this.form.submit();") %>
      </div>
    <% end %>

    <div class="clearfix"></div>

    <%= form_with(model: @subscription, local: true, url: dashboard_subscriptions_path, class: "mt-3") do |form| %>
      <% if @subscription.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@subscription.errors.count, "error") %> prohibited this subscription from being saved:</h2>

          <ul>
          <% @subscription.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="form-group">
        <%= form.label :course_ids %>
        <%= form.collection_check_boxes :course_ids, @courses || @subscription.courses, :id, :title, required: true do |b| %>
          <div class="form-check">
            <%= b.check_box(class: "form-check-input") %>
            <%= b.label(class: "form-check-label") %>
          </div>
        <% end %>
      </div>
      <div class="actions">
        <%= link_to t('defaults.back'), dashboard_index_path, class: "btn btn-primary float-left" %>
        <%= form.submit t('defaults.save'), class: "btn btn-dark float-lg-right" %>
      </div>
    <% end %>
  </div>
</div>
