<div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
  <% if camp.cover_picture.attached? %>
    <%= image_tag camp.cover_picture, class: "w-full h-48 object-cover" %>
  <% else %>
    <div class="w-full h-48 bg-gray-200 flex items-center justify-center">
      <svg class="h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
      </svg>
    </div>
  <% end %>

  <div class="p-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-2"><%= camp.title %></h3>

    <div class="space-y-2 text-sm text-gray-600 mb-4">
      <div class="flex items-center">
        <svg class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        <span><%= l(camp.starts_at, format: :short) %> - <%= l(camp.ends_at, format: :short) %></span>
      </div>
      <div class="flex items-center">
        <svg class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1" />
        </svg>
        <span><%= number_to_currency(camp.price, unit: "â‚¬") %></span>
      </div>
      <div class="flex items-center">
        <svg class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
        </svg>
        <span><%= t('.capacity', current: camp.subscriptions.confirmed.count, count: camp.capacity) %></span>
      </div>
    </div>

    <div class="flex items-center justify-between">
      <span class="text-sm text-gray-500">
        <%= t('.duration_days', count: camp.duration_days) %>
      </span>
      <%= link_to t('.view_details'), dashboard_camp_path(camp), class: "inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-blue-700 bg-blue-100 hover:bg-blue-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    </div>
  </div>
</div>
