<h1 class="page-title"><%= t('defaults.welcome') %> !</h1>
<hr/>

<div class="row">
  <div class="col-md-8 offset-md-2 pt-2">
    <% if @subscriptions.any? %>
      <h3 class="text-center pb-4"><%= t('.subscription_detailed_info', year: Subscription.current_year) %></h3>

      <div class="alert alert-info text-center mb-5">
        <%= t('.come_to_your_slots_only') %>
      </div>

      <%= render partial: 'subscription', collection: @subscriptions, as: :subscription, locals: { show: !@subscriptions.many? } %>

      <%= link_to t('.add_subscription'), new_dashboard_subscription_path, class: "btn btn-primary w-100 mt-5" %>

      <details class="mt-3">
        <summary class="cursor-pointer w-full text-center py-2 px-4 border border-amber-500 text-amber-500 hover:bg-amber-500 hover:text-white rounded transition-colors">
          <%= t('.how_to_complete_my_subscription') %>
        </summary>
        <div class="mt-4 p-4 bg-white rounded shadow">
          <%= render 'dashboard/subscription_instructions' %>
        </div>
      </details>
    <% else %>
      <p><%= t('.not_yet_subscribed', year: "#{Subscription.current_year} - #{Subscription.next_year}") %></p>
      <%= link_to t('.choose_my_courses'), new_dashboard_subscription_path, class: "btn btn-primary w-100" %>
    <% end %>
  </div>
</div>
