<div class="grid bg-white border rounded-lg shadow-sm">
  <!-- Header section with member info and price -->
  <%= label_tag dom_id(subscription, :dashboard),
                class: "p-4 sm:p-6 bg-gradient-to-r from-gray-50 to-white border-b cursor-pointer" do %>
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <div class="flex items-center gap-4">
        <div class="relative">
          <%= image_tag url_for(subscription.member.avatar),
              alt: "Avatar #{subscription.member.first_name}",
              class: "w-12 h-12 sm:w-14 sm:h-14 rounded-full object-cover ring-2 ring-white shadow-sm" %>
          <% if subscription.completed? %>
            <div class="absolute -bottom-1 -right-1 h-5 w-5 bg-green-500 rounded-full ring-2 ring-white flex items-center justify-center">
              <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
            </div>
          <% else %>
            <div class="absolute -bottom-1 -right-1 h-5 w-5 bg-yellow-500 rounded-full ring-2 ring-white flex items-center justify-center">
              <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm.75-12.25a.75.75 0 00-1.5 0v4.25c0 .414.336.75.75.75h3a.75.75 0 000-1.5h-2.25V5.75z" clip-rule="evenodd"/>
              </svg>
            </div>
          <% end %>
        </div>
        <div>
          <%= link_to subscription.member.full_name,
              [:edit, :dashboard, subscription.member],
              class: "text-lg font-semibold text-gray-900 hover:text-gray-600" %>
          <div class="mt-1 text-sm text-gray-500">
            <%= number_to_currency(subscription.fee, unit: "€", separator: ",", format: "%n %u") %>
          </div>
        </div>
      </div>

      <div class="relative">
        <details class="group">
          <summary class="flex cursor-pointer items-center rounded-md px-4 py-2 text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
            <%= t('defaults.action') %>
            <svg class="ml-2 h-5 w-5 text-white transition-transform group-open:rotate-180" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </summary>
          <div class="absolute right-0 z-50 mt-2 w-56 rounded-md bg-white shadow-lg ring-1 ring-black ring-opacity-5 divide-y divide-gray-100">
            <%= link_to t('defaults.details'),
                [:dashboard, subscription],
                class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50" %>
            <%= link_to t('.edit_member'),
                [:edit, :dashboard, subscription.member],
                class: "block px-4 py-2.5 text-sm text-gray-700 hover:bg-gray-50 transition-colors" %>
            <% unless subscription.terms_accepted_at? %>
              <%= link_to t('.accept_terms'),
                  edit_dashboard_subscription_terms_path(subscription.id),
                  class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50" %>
            <% end %>
            <% unless subscription.doctor_certified_at? %>
              <%= link_to t('.certify_doctor'),
                  edit_dashboard_subscription_medical_certificate_path(subscription.id),
                  class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50" %>
            <% end %>
            <% unless subscription.paid? || subscription.payment_proof.attached? %>
              <%= link_to t('.upload_payment_proof'),
                  edit_dashboard_subscription_payment_proof_path(subscription.id),
                  class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50" %>
            <% end %>
            <% unless subscription.paid? %>
              <%= link_to t('.pay'),
                  new_dashboard_subscription_payment_path(subscription.id),
                  class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50" %>
            <% end %>
          </div>
        </details>
      </div>
    </div>
  <% end %>

  <%= check_box_tag dom_id(subscription, :dashboard),
                    subscription.completed?,
                    class: "hidden peer",
                    autocomplete: "off" %>

  <!-- Course information table -->
  <div class="grid grid-rows-[0fr] peer-checked:grid-rows-[1fr] overflow-hidden transition-[grid-template-rows] duration-200 peer-checked:px-4 peer-checked:py-5 peer-checked:sm:p-6">
    <div class="overflow-x-auto -mx-4 sm:mx-0">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= Course.human_attribute_name(:title) %>
            </th>
            <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= Course.human_attribute_name(:weekday) %>
            </th>
            <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= Course.human_attribute_name(:category) %>
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% subscription.courses.each do |course| %>
            <tr class="hover:bg-gray-50">
              <td class="px-4 py-3 text-sm text-gray-900"><%= course.title %></td>
              <td class="px-4 py-3 text-sm text-gray-900"><%= course.weekday %></td>
              <td class="px-4 py-3 text-sm text-gray-900">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                  <%= course.category.title %>
                </span>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <!-- Documents and Certification section -->
      <div class="mt-8 grid grid-cols-1 sm:grid-cols-2 gap-4 sm:gap-6">
        <!-- Terms Accepted Card -->
        <div class="group">
          <%= tag.div class: class_names(
                "relative p-4 sm:p-6 rounded-xl flex flex-col items-start border-2 transition-all duration-300 hover:shadow-md",
                'bg-gradient-to-br from-green-50 to-emerald-50 border-green-200 shadow-sm' => subscription.terms_accepted_at?,
                'bg-gradient-to-br from-red-50 to-rose-50 border-red-200 hover:border-red-300' => !subscription.terms_accepted_at?
              ) do %>
            <div class="flex items-center justify-between w-full mb-4">
              <h3 class="text-sm font-semibold text-gray-900 uppercase tracking-wide">
                <%= t('.conditions_inscription') %>
              </h3>
              <% if subscription.terms_accepted_at? %>
                <div class="flex-shrink-0 w-8 h-8 bg-green-500 rounded-full flex items-center justify-center">
                  <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                </div>
              <% end %>
            </div>
            <% if subscription.terms_accepted_at? %>
              <p class="text-green-700 font-medium text-sm">
                <%= t('.terms_accepted') %>
              </p>
            <% else %>
              <%= link_to t('.accept_terms'),
                  edit_dashboard_subscription_terms_path(subscription.id),
                  class: "inline-flex items-center px-4 py-2 bg-red-600 hover:bg-red-700 text-white text-sm font-medium rounded-lg transition-colors duration-200" %>
            <% end %>
          <% end %>
        </div>

        <!-- Medical Certificate Card -->
        <div class="group">
          <%= tag.div class: class_names(
                "relative p-4 sm:p-6 rounded-xl flex flex-col items-start border-2 transition-all duration-300 hover:shadow-md",
                'bg-gradient-to-br from-green-50 to-emerald-50 border-green-200 shadow-sm' => subscription.doctor_certified_at?,
                'bg-gradient-to-br from-red-50 to-rose-50 border-red-200 hover:border-red-300' => !subscription.doctor_certified_at?
              ) do %>
            <div class="flex items-center justify-between w-full mb-4">
              <h3 class="text-sm font-semibold text-gray-900 uppercase tracking-wide">
                <%= t('.certificat_medical') %>
              </h3>
              <% if subscription.doctor_certified_at? %>
                <div class="flex-shrink-0 w-8 h-8 bg-green-500 rounded-full flex items-center justify-center">
                  <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                </div>
              <% end %>
            </div>
            <% if subscription.doctor_certified_at? && subscription.medical_certificate.attached? %>
              <div class="flex items-center justify-between w-full">
                <p class="text-green-700 font-medium text-sm">
                  <%= t('.doctor_certified') %>
                </p>
                <div class="flex items-center gap-2">
                  <%= link_to subscription.medical_certificate,
                      target: "_blank",
                      class: "text-gray-700 rounded-lg transition-colors duration-200 group-hover:scale-110 transform",
                      title: t('dashboard.subscription.download_medical_certificate', default: "Télécharger le certificat médical"),
                      aria: { label: t('dashboard.subscription.download_medical_certificate', default: "Télécharger le certificat médical") } do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M4 16v2a2 2 0 002 2h12a2 2 0 002-2v-2M7 10l5 5 5-5M12 15V3"/>
                    </svg>
                  <% end %>
                  <%= link_to edit_dashboard_subscription_medical_certificate_path(subscription),
                      class: "text-gray-600 rounded-lg transition-colors duration-200",
                      title: t('dashboard.subscription.change_medical_certificate', default: "Remplacer le certificat médical") do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                    </svg>
                  <% end %>
                </div>
              </div>
            <% else %>
              <%= link_to t('.certify_doctor'),
                  edit_dashboard_subscription_medical_certificate_path(subscription.id),
                  class: "inline-flex items-center px-4 py-2 bg-red-600 hover:bg-red-700 text-white text-sm font-medium rounded-lg transition-colors duration-200" %>
            <% end %>
          <% end %>
        </div>

        <!-- Payment Card -->
        <div class="group">
          <%= tag.div class: class_names(
                "relative p-4 sm:p-6 rounded-xl flex flex-col items-start border-2 transition-all duration-300 hover:shadow-md",
                'bg-gradient-to-br from-green-50 to-emerald-50 border-green-200 shadow-sm' => subscription.paid?,
                'bg-gradient-to-br from-yellow-50 to-amber-50 border-yellow-200 hover:border-yellow-300' => !subscription.paid? && subscription.payment_proof.attached?,
                'bg-gradient-to-br from-red-50 to-rose-50 border-red-200 hover:border-red-300' => !subscription.paid? && !subscription.payment_proof.attached?
              ),
              data: { turbo_frame: '_top' } do %>
            <div class="flex items-center justify-between w-full mb-4">
              <h3 class="text-sm font-semibold text-gray-900 uppercase tracking-wide">
                <%= t('.cotisation') %>
              </h3>
              <% if subscription.paid? %>
                <div class="flex-shrink-0 w-8 h-8 bg-green-500 rounded-full flex items-center justify-center">
                  <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                </div>
              <% elsif subscription.payment_proof.attached? %>
                <div class="flex-shrink-0 w-8 h-8 bg-yellow-500 rounded-full flex items-center justify-center">
                  <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 2a8 8 0 100 16 8 8 0 000-16zm1 8V6a1 1 0 10-2 0v5a1 1 0 00.293.707l3 3a1 1 0 001.414-1.414l-2.707-2.707z" clip-rule="evenodd"/>
                  </svg>
                </div>
              <% end %>
            </div>

            <% if subscription.paid? %>
              <div class="flex items-center justify-between w-full">
                <p class="text-green-700 font-medium text-sm">
                  <%= t('.payment_confirmed') %>
                </p>
                <% if subscription.invoice.attached? %>
                  <%= link_to rails_blob_path(subscription.invoice, disposition: "attachment"),
                      class: "p-2 bg-blue-100 hover:bg-blue-200 text-blue-700 rounded-lg transition-colors duration-200 group-hover:scale-110 transform",
                      title: t('defaults.download', default: "Télécharger") do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M4 16v2a2 2 0 002 2h12a2 2 0 002-2v-2M7 10l5 5 5-5M12 15V3"/>
                    </svg>
                  <% end %>
                <% end %>
              </div>
            <% elsif subscription.payment_proof.attached? %>
              <div class="space-y-3">
                <p class="text-yellow-700 font-medium text-sm">
                  <%= t('.payment_proof_in_review') %>
                </p>
                <div class="flex flex-wrap gap-2">
                  <%= link_to t('.download_payment_proof'),
                              rails_blob_path(subscription.payment_proof, disposition: "attachment"),
                              class: "inline-flex items-center px-3 py-1.5 bg-yellow-600 hover:bg-yellow-700 text-white text-xs font-medium rounded-lg transition-colors duration-200" %>
                  <%= link_to t('.pay_directly'),
                              new_dashboard_subscription_payment_path(subscription.id),
                              class: "inline-flex items-center px-3 py-1.5 bg-blue-600 hover:bg-blue-700 text-white text-xs font-medium rounded-lg transition-colors duration-200" %>
                </div>
              </div>
            <% else %>
              <%= link_to t('.pay'),
                          new_dashboard_subscription_payment_path(subscription.id),
                          class: "inline-flex items-center px-4 py-2 bg-red-600 hover:bg-red-700 text-white text-sm font-medium rounded-lg transition-colors duration-200" %>
            <% end %>
          <% end %>
        </div>
      </div>

      <!-- Child Subscriptions Section -->
      <% if subscription.child_subscriptions.any? %>
        <div class="border-t border-gray-200 p-4 sm:p-6">
          <h4 class="text-sm font-medium text-gray-900 mb-3"><%= t('.additional_subscriptions') %></h4>
          <div class="space-y-3">
            <% subscription.child_subscriptions.each do |child_sub| %>
              <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                <div class="flex items-center gap-3">
                  <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
                    <svg class="w-4 h-4 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                    </svg>
                  </div>
                  <div>
                    <p class="text-sm font-medium text-gray-900">
                      <% if child_sub.camp.present? %>
                        <%= link_to child_sub.camp.title, [:dashboard, child_sub.camp] %>
                      <% elsif child_sub.courses.any? %>
                        <ul>
                          <% child_sub.courses.each do |course| %>
                            <li><%= course.title %></li>
                          <% end %>
                        </ul>
                      <% end %>
                     </p>
                    <p class="text-xs text-gray-500">
                      <%= number_to_currency(child_sub.fee, unit: "€", separator: ",", format: "%n %u") %>
                    </p>
                  </div>
                </div>
                <div class="flex items-center gap-2">
                  <%= tag.span class: class_names(
                                        "inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium",
                                        'bg-green-100 text-green-800' => child_sub.confirmed?,
                                        'bg-yellow-100 text-yellow-800' => !child_sub.confirmed?
                                      ) do %>
                    <%= Subscription.human_attribute_name(child_sub.status) %>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
