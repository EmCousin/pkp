<%= form_with model: member, url: [:dashboard, member], class: "p-8" do |f| %>
  <!-- Personal Information Section -->
  <div class="mb-8">
    <div class="flex items-center mb-6">
      <div class="flex-shrink-0">
        <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
        </div>
      </div>
      <div class="ml-4">
        <h2 class="text-xl font-semibold text-gray-900"><%= t('.personal_information') %></h2>
        <p class="text-sm text-gray-500"><%= t('.personal_information_description') %></p>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="space-y-2">
        <%= f.label :first_name, class: "block text-sm font-medium text-gray-700" do %>
          <%= f.object.class.human_attribute_name(:first_name) %> <span class="text-red-500">*</span>
        <% end %>
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
          </div>
          <%= f.text_field :first_name,
                           class: 'block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200',
                           placeholder: "Prénom de l'élève",
                           required: true %>
        </div>
        <%= f.error_for :first_name %>
      </div>

      <div class="space-y-2">
        <%= f.label :last_name, class: "block text-sm font-medium text-gray-700" do %>
          <%= f.object.class.human_attribute_name(:last_name) %> <span class="text-red-500">*</span>
        <% end %>
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
          </div>
          <%= f.text_field :last_name,
                           class: 'block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200',
                           placeholder: "Nom de l'élève",
                           required: true %>
        </div>
        <%= f.error_for :last_name %>
      </div>
    </div>

    <div class="mt-6 space-y-2">
      <%= f.label :birthdate, class: "block text-sm font-medium text-gray-700" do %>
        <%= f.object.class.human_attribute_name(:birthdate) %> <span class="text-red-500">*</span>
      <% end %>
      <div class="relative">
        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
          <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
        </div>
        <%= f.date_field :birthdate,
                         class: 'block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200',
                         required: true %>
      </div>
      <%= f.error_for :birthdate %>
    </div>
  </div>

  <!-- Emergency Contact Section -->
  <div class="mb-8">
    <div class="flex items-center mb-6">
      <div class="flex-shrink-0">
        <div class="w-8 h-8 bg-orange-100 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
        </div>
      </div>
      <div class="ml-4">
        <h2 class="text-xl font-semibold text-gray-900"><%= f.object.class.human_attribute_name(:contact_name) %></h2>
        <p class="text-sm text-gray-500"><%= t('.contact_name_description') %></p>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="space-y-2">
        <%= f.label :contact_name, class: "block text-sm font-medium text-gray-700" do %>
          <%= t('.contact_name') %> <span class="text-red-500">*</span>
        <% end %>
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
          </div>
          <%= f.text_field :contact_name,
                           class: 'block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200',
                           placeholder: t('.contact_name'),
                           required: true %>
        </div>
        <%= f.error_for :contact_name %>
      </div>

      <div class="space-y-2">
        <%= f.label :contact_phone_number, class: "block text-sm font-medium text-gray-700" do %>
          <%= f.object.class.human_attribute_name(:contact_phone_number) %> <span class="text-red-500">*</span>
        <% end %>
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
          </div>
                    <%= f.telephone_field :contact_phone_number,
                               class: 'block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200',
                               placeholder: "06 12 34 56 78",
                               required: true %>
        </div>
        <%= f.error_for :contact_phone_number %>
        </div>
      </div>
    </div>

    <div class="mt-6 space-y-2">
      <%= f.label :contact_relationship, class: "block text-sm font-medium text-gray-700" do %>
        <%= f.object.class.human_attribute_name(:contact_relationship) %> <span class="text-red-500">*</span>
      <% end %>
      <div class="relative">
        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
          <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
        </div>
        <%= f.collection_select :contact_relationship,
                                Member::CONTACTS,
                                :to_s,
                                :to_s,
                                { include_blank: t('.select_contact_relationship') },
                                required: true,
                                class: "block w-full pl-10 pr-10 py-3 bg-white border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200 appearance-none" %>
        <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
          <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
          </svg>
        </div>
      </div>
      <%= f.error_for :contact_relationship %>
    </div>
  </div>

  <!-- Photo Section -->
  <div class="mb-8" data-controller="image-upload" data-image-upload-output-class="w-32 h-32 object-cover rounded-lg border-2 border-gray-200 shadow-lg">
    <div class="flex items-center mb-6">
      <div class="flex-shrink-0">
        <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
        </div>
      </div>
      <div class="ml-4">
        <h2 class="text-xl font-semibold text-gray-900"><%= f.object.class.human_attribute_name(:avatar) %></h2>
        <p class="text-sm text-gray-500"><%= t('.avatar_description') %></p>
      </div>
    </div>

    <div class="space-y-4">
      <div class="space-y-2">
        <%= f.label :avatar, class: "block text-sm font-medium text-gray-700" do %>
          <%= t('.select_avatar') %> <span class="text-red-500">*</span>
        <% end %>
        <div class="flex items-center justify-center w-full">
          <label class="flex flex-col items-center justify-center w-full h-32 border-2 border-gray-300 border-dashed rounded-lg cursor-pointer bg-gray-50 hover:bg-gray-100 transition-colors duration-200">
            <div class="flex flex-col items-center justify-center pt-5 pb-6">
              <svg class="w-8 h-8 mb-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
              </svg>
              <p class="mb-2 text-sm text-gray-500">
                <span class="font-semibold"><%= t('.click_to_upload') %></span> <%= t('.or_drag_and_drop') %>
              </p>
              <p class="text-xs text-gray-500"><%= t('.allowed_formats') %></p>
            </div>
            <%= f.file_field :avatar,
                required: !f.object.avatar.attached?,
                class: "hidden",
                data: { image_upload_target: 'input', action: 'image-upload#preview' },
                accept: 'image/*' %>
          </label>
        </div>
        <%= f.error_for :avatar %>
      </div>

      <div class="flex justify-center">
        <div class="relative">
          <% if f.object.avatar.attached? && f.object.persisted? %>
            <%= image_tag f.object.avatar,
                class: "w-32 h-32 object-cover rounded-lg border-2 border-gray-200 shadow-lg",
                data: { image_upload_target: 'output' } %>
          <% else %>
            <div class="w-32 h-32 bg-gray-100 rounded-lg border-2 border-gray-200 flex items-center justify-center" data-image-upload-target="output">
              <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Consent Section -->
  <div class="mb-8">
    <div class="flex items-center mb-6">
      <div class="flex-shrink-0">
        <div class="w-8 h-8 bg-purple-100 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
      </div>
      <div class="ml-4">
        <h2 class="text-xl font-semibold text-gray-900"><%= t('.permissions') %></h2>
        <p class="text-sm text-gray-500"><%= t('.permissions_description') %></p>
      </div>
    </div>

    <div class="bg-gray-50 rounded-lg p-6">
      <label class="flex items-start space-x-3 cursor-pointer">
        <%= f.switch :agreed_to_advertising_right %>
        <div class="text-sm text-gray-700">
          <span class="font-medium"><%= t('.advertising_right_statement') %></span>
          <p class="mt-1 text-gray-600"><%= t('.advertising_right_statement_description') %></p>
        </div>
      </label>
      <%= f.error_for :agreed_to_advertising_right %>
    </div>
  </div>

  <!-- Action Buttons -->
  <div class="flex flex-col sm:flex-row gap-4 pt-6 border-t border-gray-200">
    <%= link_to t('defaults.back'), :dashboard,
        class: "flex-1 px-6 py-3 text-center text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 hover:border-gray-400 transition-colors duration-200 font-medium" %>
    <%= f.submit t('defaults.save'),
        class: "flex-1 px-6 py-3 bg-gradient-to-r from-blue-600 to-blue-700 text-white rounded-lg hover:from-blue-700 hover:to-blue-800 focus:ring-4 focus:ring-blue-200 transition-all duration-200 font-medium shadow-lg" %>
  </div>
<% end %>
